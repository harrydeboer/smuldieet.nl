<div id="form_errors_client"></div>
<div id="form_errors_server">
    {{ form_errors(form) }}
    {{ form_errors(form.title) }}
    {{ form_errors(form.slug) }}
    {{ form_errors(form.summary) }}
    {{ form_errors(form.content) }}
</div>
{{ form_start(form) }}
<div class="fw-bold">{{ form_label(form.title) }}</div>
{{ form_widget(form.title) }}
<div class="fw-bold">{{ form_label(form.slug) }}</div>
{{ form_widget(form.slug) }}
<div class="fw-bold">{{ form_label(form.summary) }}</div>
{{ form_widget(form.summary) }}
<div class="fw-bold">{{ form_label(form.content) }}</div>
{{ form_widget(form.content) }}
<div>{{ form_widget(form.submit, { 'label': submit_label }) }}</div>
{{ form_end(form) }}
